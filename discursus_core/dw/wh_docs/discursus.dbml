project wh_discursus {

    database_type: 'snowflake'

}

// CORE WAREHOUSE

table actors_dim {

    actor_pk varchar [pk]

    actor_name varchar
    actor_code varchar
    actor_geo_country_code varchar
    actor_type_group varchar
    actor_type_code varchar
    actor_type_name varchar

}

table artifacts_fct {

    artifact_pk varchar [pk]
    event_fk varchar [ref: > events_fct.event_pk]
    reporter_pk varchar [ref: > reporters_dim.reporter_pk]

    published_date date

    artifact_type varchar
    artifact_url varchar
    artifact_page_title varchar
    artifact_page_description varchar
    artifact_keywords varchar

}

table events_fct {

    event_pk varchar [pk]

    gdelt_event_natural_key int

    creation_ts timestamp

    action_geo_country_code varchar
    action_geo_full_name varchar
    action_geo_adm1_code varchar
    action_geo_latitude decimal
    action_geo_longitude decimal
    event_type varchar

}

table event_actor_relationships_dim {

    event_actor_relationship_pk varchar [pk]
    event_fk varchar [ref: > events_fct.event_pk]
    actor_fk varchar [ref: > actors_dim.actor_pk]

    actor_type varchar
    narrative varchar

}

table reporters_dim {

    reporter_pk varchar [pk]

    reporter_name varchar
    reporter_type varchar
    reporter_country varchar

}

table protests_dim {

    protest_pk varchar [pk]

    protest_name varchar
    published_date_start date
    published_date_end date
    countries varchar
    page_description varchar

}

table protest_event_relationships_dim {

    protest_event_relationship_pk varchar [pk]
    protest_fk varchar [ref: > protests_dim.protest_pk]
    event_fk varchar [ref: > events_fct.event_pk]

}